<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnBackground">@color/gray_800</item> // Bottom navigation background
        <item name="colorOnSurface">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Customize. -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
<!--        <item name="alertDialogTheme">@style/AlertDialogTheme</item>-->
        <item name="bottomNavigationStyle">@style/BottomNavigationTheme</item>

    </style>
</resources>